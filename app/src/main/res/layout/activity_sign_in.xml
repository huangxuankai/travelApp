<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daath.travelApp.SignInActivity"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/colorTitleWidget"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signIn_backArrow"
            android:src="@drawable/back_arrow_image"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:text="登录"
            android:textSize="22sp"
            android:textColor="#4e4e4e"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signIn_wholeLayout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signIn_account"
            android:hint="请输入账号"
            android:textColorHint="@color/colorEditViewHint"
            android:textSize="15sp"
            android:background="@color/colorEditView"
            android:textCursorDrawable="@drawable/cursor_color"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/signIn_password"
            android:hint="请输入密码"
            android:textColorHint="@color/colorEditViewHint"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:background="@color/colorEditView"
            android:textCursorDrawable="@drawable/cursor_color"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/button_signIn"
            android:text="登  录"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:background="@drawable/button_round_corner"
            android:layout_marginTop="20dp"
            android:layout_width="295dp"
            android:layout_height="45dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:text="您还没有账号？"
                android:textSize="20sp"
                android:textColor="#514d4a"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_signUp"
                android:text="注册"
                android:textSize="21sp"
                android:textColor="#538bc7"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="20dp">
            <View
                android:layout_height="2px"
                android:background="#348186"
                android:layout_width="match_parent" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
